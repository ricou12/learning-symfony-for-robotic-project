<form class="form-inline my-2 my-md-0 mr-3" method="post">
    {% if app.user %}
        <div class="dropdown">
            <a class="btn btn-light dropdown-toggle" href="#" role="button" id="dropdownMenuLink01" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                <span>
                    <img src="{{ asset('/build/images/icon/connexion.png') }}" alt="connecté" width="45"
                        class="navigation__connect">
                    {{ app.user.author }}
                </span>
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink01">
                <a class="dropdown-item" href="{{path('app_login')}}">Mon profil</a>
                <a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a>
            </div>
        </div>
    {% else %}
        <!-- Button trigger modal -->
        <span class="d-inline-block" tabindex="0" data-toggle="tooltip" data-placement="top" title="Connectez-vous !">
            <a class="btn btn-light" href="{{path('app_login')}}">
                <img src="{{ asset('/build/images/icon/connexion.png') }}" alt="connecté" width="50"
                    class="navigation__connect">
            </a>
        </span>
    {% endif %}
</form>
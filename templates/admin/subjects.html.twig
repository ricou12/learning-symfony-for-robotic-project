{% extends 'base.html.twig' %}

{% block title %}{% endblock %}
{% block description %}{% endblock %}
{# Ajoute l'icone de connection #}
{% block userAccount %}{% include "includes/connect.html.twig" %}{% endblock %}

{% block body %}
<section class="container">
    <div class="row my-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('admin_utilisateurs') }}">Administration</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Sujets du forum</li>
                </ol>
            </nav>
            <h1>Liste des sujets post√©s par {{user.author}}</h1>
            <div class="mt-4 p-4 border shadow rounded">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">id</th>
                            <th scope="col">Titre</th>
                            <th scope="col">description</th>
                            <th scope="col">createdAt</th>
                            <th scope="col">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for subject in subjects %}
                        <tr>
                            <td>{{ subject.id }}</td>
                            <td>{{ subject.title }}</td>
                            <td>{{ subject.description|nl2br }}</td>
                            <td>{{ subject.createdAt|format_datetime('full', 'none', timezone ='Europe/Paris', locale='fr') }}</td>
                            <td>
                                <button type="button" class="btn btn-outline-danger" data-toggle="modal" data-target="#delete_{{subject.id}}">
                                    <img src="{{asset("/build/images/icon/trash.png")}}" width="25">
                                </button>
                                <div class="modal" id="delete_{{subject.id}}" tabindex="-1" role="dialog">
                                    <div class="modal-dialog modal-dialog-centered" role="document">
                                        <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title text-danger">Demande de confirmation</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Etes-vous certain de vouloir supprimer ce sujet: <span class="font-weight-bold font-italic">{{subject.title}}</span> !</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Annuler</button>
                                            <a href="{{ path('admin_delete_subject', {'slug':subject.slug, 'id':subject.user.id }) }}" class="btn btn-outline-danger"><img src="{{asset("/build/images/icon/trash.png")}}" width="25"></a>
                                        </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>  
{% endblock %}
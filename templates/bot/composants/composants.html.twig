                ) }}

                {{ component.cardRc(
                   "Potentiomètres",
                    "/build/medias/images/composants/potentiometre.png",
                ) }}

                {{ component.cardRc(
                   "Boutons pour potentiomètres",
                    "/build/medias/images/composants/Boutons-potentiometre.png",
                ) }}

                {{ component.cardRc(
                   "Résistances",
                    "/build/medias/images/composants/resistances.png",
                ) }}

                {{ component.cardRc(
                   "Led",
                    "/build/medias/images/composants/led.png",
                ) }}

                {{ component.cardRc(
                   "Pin strip Reglette a broches",
                    "/build/medias/images/composants/broches.png",
                ) }}

            </div>
        </article>

    </main>

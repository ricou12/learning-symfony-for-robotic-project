<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">

        {# <!-- GOOGLE FONTS --> #}
        {# <link href="https://fonts.googleapis.com/css2?family=Ranchers&display=swap" rel="stylesheet">  #}
        {# <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">  #}

        {# <!-- autoriser l'indexation par les moteurs de recherche --> #}
        <meta name="robots" content="index">

        {# <!-- HTML Meta Tags --> #}
        <title>{{ block('title') }} - IHM Robotique</title>
        <link rel="shortcut icon" type="image/x-icon" href="{{ asset("/build/images/icon/favicon.png") }}"/>
        <meta name="description" content="{{ block('description') }}">
        <link rel="canonical" href="">

        {# <!-- Google / Search Engine Tags --> #}
        <meta itemprop="name" content="{{ block('description') }}">
        <meta itemprop="description" content="{{ block('description') }}">
        <meta itemprop="image" content="{{ asset('/build/video/logoOg.gif') }}">

        {# <!-- Facebook Meta Tags --> #}
        <meta property="og:locale" content="fr_FR"/>
        <meta property="og:type" content="website"/>
        <meta property="og:title" content="{{ block('title') }} - IHM Robotique"/>
        <meta property="og:description" content="{{ block('description') }}"/>
        <meta property="og:url" content=""/>
        <meta property="og:image" content="{{ asset('/build/video/logoOg.gif') }}"/>
        <meta property="og:image:width" content="300"/>
        <meta property="og:image:height" content="169"/>

        {# <!-- Twitter Meta Tags --> #}
        <meta name="twitter:card" content="summary_large_image">
        <meta name="twitter:title" content="{{ block('title') }} - IHM Robotique">
        <meta name="twitter:description" content="{{ block('description') }}">
        <meta name="twitter:image" content="{{ asset('/build/video/logoOg.gif') }}">

        {# Renders a link tag (if your module requires any CSS)
            <link rel="stylesheet" href="/build/app.css"> #}
        {{ encore_entry_link_tags('app') }}
             
    </head>

    <body>
        <header>
            {% include "includes/navbar.html.twig" %}
        </header>
        
        <main>
             {% block body %}{% endblock %}
        </main>
       
        {% include "includes/footer.html.twig" %}
        
        {# Gestion des consentements #}
        <article class="cookiesManager__box text-white" id="cookie-root"></article>
        
        {# Renders app.js & a webpack runtime.js file #}
        {# <script src="/build/runtime.js"></script>
            <script src="/build/app.js"></script> #}
        {{ encore_entry_script_tags('app') }}
        
        {% block javascripts %}{% endblock %}
    </body>
</html>
